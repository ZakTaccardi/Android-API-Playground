<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taccardi.android_api_playground">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.taccardi.android_api_playground.MainActivity" />
        </activity>
        <activity
            android:name=".TransitionApiActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.taccardi.android_api_playground.MainActivity" />
        </activity>
        <activity
            android:name=".AnimatedVectorDrawableActivity"
            android:label="@string/title_activity_animated_vector_drawable"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.taccardi.android_api_playground.MainActivity" />
        </activity>
        <activity
            android:name=".StateListAnimatorActivity"
            android:label="@string/title_activity_state_list_animator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.taccardi.android_api_playground.MainActivity" />
        </activity>
    </application>

</manifest>
